// Slide
!def slide = {
  <section $props$>$content$</section>
}

!def heading = { <h3 $props$>$content$</h3> }

!let animSlide = slide [data-auto-animate]
!def p = { <p $props$>$content$</p> }

!let firstHead = heading { "WELCOME" }

animSlide {
  firstHead

  p { 
    [[
    Hello, World!
    ]]
  }
}

animSlide {
  firstHead

  p [%margin-top=100px] { 
    [[
    Hello, World!
    ]]
  }

  [[Some text]]
}
